@page
@model ChatSystem.Pages.Users.UserListModel
@{
}

<link rel="stylesheet" href="~/css/userlist.css">

<div class="container">
  <div class="row">
        @foreach (var user in Model.Users)
        {
          <div class="col-md-6 col-xl-4">
            <div class="card">
              <div class="card-body">
                <div class="media align-items-center">
                  <span style="background-image: url(https://bootdey.com/img/Content/avatar/avatar1.png)" class="avatar avatar-xl mr-3"></span>
                  <div class="media-body overflow-hidden">
                    <h5 class="card-text mb-0">@user.UserName</h5>
                    <p class="card-text text-uppercase text-muted">@user.KnownAs</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <p>@user.Introduction</p>
                        <button type="button" class="btn btn-outline-primary">Add</button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div> 
        }
  </div>
</div>
